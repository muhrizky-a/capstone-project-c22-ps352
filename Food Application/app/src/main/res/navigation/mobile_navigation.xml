<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.foodrecipes.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_like"
        android:name="com.example.foodrecipes.ui.like.LikeFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/like_fragment" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.foodrecipes.ui.account.AccountFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/account_fragment" />
</navigation>